{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2017",
      "sourceMap": true,
      "outDir": "./dist",
      "rootDir": "./",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["*.ts", "src/app.module.ts", "src/main.ts"],
    "exclude": ["node_modules", "dist"]
  }