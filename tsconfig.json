{
  "compilerOptions": {
    "outDir": "./dist",         // هذا لازم يكون موجود عشان يحدد أين يروح الكود بعد البناء
    "rootDir": "./src",         // تحديد مصدر الملفات
    "target": "ES6",            // تحديد النسخة المستهدفة من JavaScript
    "module": "CommonJS",       // تحديد نوع الموديول (يعني Node.js هنا)
    "moduleResolution": "node", // تحديد طريقة حل الموديولات
    "esModuleInterop": true,    // دعم ES modules في CommonJS
    "skipLibCheck": true,       // لتخطي التحقق من المكتبات
    "forceConsistentCasingInFileNames": true // التأكد من الكتابة المتسقة للأسماء
  },
  "include": [
    "src/**/*.ts"  // تأكد من أن جميع الملفات في مجلد src سيتم تجميعها
  ]
}
